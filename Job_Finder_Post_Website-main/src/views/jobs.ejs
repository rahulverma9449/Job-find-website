
<div class="container-fluid backgroundColor " style="padding-top: 10px;">
   
        
    <div class="container" style="min-height: 100vh;">
        <div class=""><% if(locals.userEmail && locals.lastVisit){ %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              You last visit was on: <%= locals.lastVisit %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
      <% } %></div>
        <div class="d-flex justify-content-around flex-wrap  ">
            
            <% jobs.forEach((job)=>{ %>
                <div class="jobBox mt-2 mb-4 mx-2">
                    <% if(job.active){ %>
                        <p class="activerlyHiring">Actively Hiring <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-graph-up-arrow " style="color: greenyellow; " viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm10 3.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-1 0V4.9l-3.613 4.417a.5.5 0 0 1-.74.037L7.06 6.767l-3.656 5.027a.5.5 0 0 1-.808-.588l4-5.5a.5.5 0 0 1 .758-.06l2.609 2.61L13.445 4H10.5a.5.5 0 0 1-.5-.5Z"/>
                          </svg></p>

                        <% }else{ %>
                            <p class="activerlyHiring">Not Activerly Hiring <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-graph-down-arrow" style="color: greenyellow; " viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M0 0h1v15h15v1H0V0Zm10 11.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 .5-.5v-4a.5.5 0 0 0-1 0v2.6l-3.613-4.417a.5.5 0 0 0-.74-.037L7.06 8.233 3.404 3.206a.5.5 0 0 0-.808.588l4 5.5a.5.5 0 0 0 .758.06l2.609-2.61L13.445 11H10.5a.5.5 0 0 0-.5.5Z"/>
                              </svg></p>
                            <% } %>
                                <p class="jobOrgName">
                                    <%= job.orgName %>
                                </p>
                                <p class="jobTechPara"><%= job.techType %> <span class="jobTech">
                                        <%= job.tech%>
                                    </span></p>
                                <p class="location mr-4"><i class='bx bx-location-plus ml-2'></i>&nbsp;<%= job.location
                                        %><span class="ml-4">&ensp;<%= job.mode%></span></p>
                                <p class="salaryPara"><span class="rupeeSymbol">&#8377;</span> <span>
                                        <%= job.salary.first %>
                                        <% if(job.salary.second) {%>
                                    </span>-<span>
                                        <%= job.salary.second %>
                                    </span>
                                    <%}%> lpa</p>
                                <div class="d-flex justify-content-around flex-wrap ">
                                    
                                    <% if (Array.isArray(job.skills)) { %>
                                        <% job.skills.forEach((skill) => { %>
                                            <div class="skill mt-2 mx-1">
                                                <%= skill %>
                                            </div>
                                        <% }); %>
                                    <% } %>
                                       

                                </div>
                                <a href="job/<%= job.id %>" class="container-fluid  mb-2 mt-3 viewDetails"  >View Details</a>
                </div>
                <% }) %>
        </div>
    </div>
</div>